#!/bin/bash

# Define the wallpaper directory
wallpaper_dir="$HOME/Pictures/wallpaper"

# Define transition settings
transition_type="grow"  # You can change this to: fade, slide, shrink, etc.
transition_duration="2" # Duration in seconds for the transition

# Cycle through wallpapers every 5 minutes (300 seconds)
while true; do
	# Pick a random wallpaper
	img=$(find "$wallpaper_dir" -type f \( -iname '*.jpg' -o -iname '*.png' \) | shuf -n 1)

	# Apply the wallpaper with transition
	swww img "$img" --transition-type "$transition_type" --transition-duration "$transition_duration"

	# Wait for 5 minutes before changing wallpaper
	sleep 300
done
